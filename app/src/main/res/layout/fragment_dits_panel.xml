<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tabFragment.ditsPanel.DitsPanelFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/ditsPanelTabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_with_border"
        android:overScrollMode="never"
        android:padding="5dp"
        app:tabGravity="fill"

        app:tabIndicatorColor="@color/red"
        app:tabMode="auto"
        app:tabSelectedTextColor="@color/purple_700"
        app:tabTextColor="@color/headlineBlue">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/ditsPanleViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>